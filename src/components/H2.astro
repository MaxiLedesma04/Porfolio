---
interface Props {
	title: string;
}

const {title} = Astro.props;
---

<h2 class="h2-title" >{title}</h2>

<style>
    .h2-title {
        margin-top: 10rem;
        width: 90%;
		text-align: center;
		font-size: 3rem;
		font-weight: 700;
        background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
        position: absolute;
    }
</style>